syntax = "proto3";

package {{.Package | SnakeCase}};

option go_package = "{{.GoModule}}/proto/{{.Package | SnakeCase}}";

import "google/api/annotations.proto";
{{range .ProtoImports}}{{ .}}
{{end}}{{if .Messages}}import "typespb.proto";{{end}}
import "protoc-gen-openapiv2/options/annotations.proto";

option (grpc.gateway.protoc_gen_openapiv2.options.openapiv2_swagger) = {
    info: {
        title: "{{.GoModule}}";
        version: "1.0";
        description: "Boilerplate code generated by xo-grpc. Modify proto/*.proto files then run 'compile.sh' script on proto directory to change the services interface.";
        contact: {
            name: "xo-grpc - Walter Wanderley";
            url: "https://github.com/walterwanderley/xo-grpc";
        };
    };
};
service {{.Package | UpperFirst}}Service {
    {{range .Services}}
    rpc {{.RpcSignature}} {
        option (google.api.http) = {
            {{range .HttpOptions}}{{ .}}
            {{end}}
        };
    }
    {{end}}
}
{{range .Services}}{{if and (not .HasCustomParams) (not .EmptyInput)}}
message {{.Name}}Request { {{.ProtoInputs}}
}
{{end}}{{if and (not .HasCustomOutput) (not .EmptyOutput)}}
message {{.Name}}Response {
{{.ProtoOutputs -}}    
}{{end}}{{end}}